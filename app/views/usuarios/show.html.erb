<%- model_class = Usuario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cuenta_id) %>:</strong></dt>
  <dd><%= @usuario.cuenta_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @usuario.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nick) %>:</strong></dt>
  <dd><%= @usuario.nick %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @usuario.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:creacion_usuario) %>:</strong></dt>
  <dd><%= @usuario.creacion_usuario %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contador_seguidores) %>:</strong></dt>
  <dd><%= @usuario.contador_seguidores %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              usuarios_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_usuario_path(@usuario), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              usuario_path(@usuario),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
