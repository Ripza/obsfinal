<h1>Listing usuarios</h1>

<table>
  <tr>
    <th>Cuenta</th>
    <th>Nombre</th>
    <th>Nick</th>
    <th>Descripcion</th>
    <th>Creacion usuario</th>
    <th>Contador seguidores</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.cuenta_id %></td>
    <td><%= usuario.nombre %></td>
    <td><%= usuario.nick %></td>
    <td><%= usuario.descripcion %></td>
    <td><%= usuario.creacion_usuario %></td>
    <td><%= usuario.contador_seguidores %></td>
    <td><%= link_to 'Show', usuario %></td>
    <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
    <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

