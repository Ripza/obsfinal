<%- model_class = Tweet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:mensaje_id) %>:</strong></dt>
  <dd><%= @tweet.mensaje_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:texto) %>:</strong></dt>
  <dd><%= @tweet.texto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:creacion_tweet) %>:</strong></dt>
  <dd><%= @tweet.creacion_tweet %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recurso) %>:</strong></dt>
  <dd><%= @tweet.recurso %></dd>
  <dt><strong><%= model_class.human_attribute_name(:usuario_id) %>:</strong></dt>
  <dd><%= @tweet.usuario_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:localizacion_id) %>:</strong></dt>
  <dd><%= @tweet.localizacion_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tweets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tweet_path(@tweet), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tweet_path(@tweet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
